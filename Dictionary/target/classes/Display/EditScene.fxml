      <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleSceneMenu" text="Back" />
      <Button layoutX="10.0" layoutY="120.0" mnemonicParsing="false" onAction="#handleAddButton" text="Add" />
      <TextField fx:id="addTextField1" layoutX="80.0" layoutY="120.0" prefHeight="25.0" prefWidth="100.0" promptText="New word" />
